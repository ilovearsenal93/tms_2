<% provide(:title, @trainee.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @trainee %>
        <%= @trainee.name %>
      </h1>
    </section>
  </aside>
  <aside class="span8">
    <section>
      <h1>Courses Enroll</h1>
      <% if current_trainee?(@trainee) %>
      <% @enrolls.each do |enroll| %>
        <% course = enroll.course %>
        <p><b><%=link_to course.course_name,course_path(course.id) %> -- 
        <% if  enroll.status == "F" %> Finished
        <% else %>New 
        <% end %> 
        </b></p>
      <% end %>
      <% else %>
        <% @enrolls.each do |enroll| %>
        <% course = enroll.course %>
        <p><b><i><%= course.course_name %> </i></b></p>
        <% @trainee_subjects.each do |trainee_subject| %>
          <p><b><%= trainee_subject.subject.subject_name %> -- 
          <% if  trainee_subject.status == "F" %>Finished
          <% else %>New 
          <% end %>
          </b></p>
          <% @assigned_tasks.each do |assigned_task| %>
            <% if trainee_subject.subject.subject_tasks.find_by(task_id: assigned_task.task_id) %>
            <p><%= assigned_task.task.task_description %>-- 
            <% if  assigned_task.status == "F" %>Finished
            <% else %>New 
            <% end %>
            <% else %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
      <% end %>
      <h1>Activity log</h1>
      <% @activity_log.each do |activity| %>
        <p><%= activity["description"] %> --
        <%= time_ago_in_words(activity["timecomplete"]) %> ago</p>  
      <% end %>
    </section>
  </aside>
</div>
