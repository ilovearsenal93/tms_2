<% provide(:title, @subject.subject_name) %>
<div class="row">
  <section>
    <h1>
      <p><%= @subject.subject_name %></p>
      </h1>
      <%= form_tag("/subjects/update/", :method => "post") do %>
        <ul style="list-style-type:none;">
          <% @assigned_task_list.each do |t| %>
            <% if t.status == "F" %> <li style="color:grey;"> 
            <%= check_box_tag "task_checkbox[]",t.id,true %> <strike><%= t.task.task_description %></strike> </li>
            <% else %> <li> <%= check_box_tag "task_checkbox[]",t.id,false %>
            <%= t.task.task_description %> </li> 
            <% end %>
            <%end%>
        </ul>
        <%= submit_tag("Update", class: "btn btn-large btn-primary") %>
      <%end %>  
      <p><b> Basic Information </p></b>
      <p><%= @subject.description %></p>
   </section>
</div>

